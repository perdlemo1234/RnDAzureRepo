{
	"name": "All_3",
	"properties": {
		"folder": {
			"name": "JSON transformations"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "student_json_input",
						"type": "DatasetReference"
					},
					"name": "Students"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "stringify1",
					"description": "Stringify Projects \n"
				},
				{
					"name": "flatten1"
				},
				{
					"name": "parse1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          age as integer,",
				"          email as string,",
				"          skills as string[],",
				"          projects as (name as string, duration as string, role as string)[]",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'arrayOfDocuments',",
				"     partitionBy('hash', 1)) ~> Students",
				"Students stringify(projects = projects ? string,",
				"     format: 'json') ~> stringify1",
				"stringify1 foldDown(unroll(skills),",
				"     mapColumn(",
				"          id,",
				"          name,",
				"          age,",
				"          email,",
				"          skills,",
				"          projects",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1",
				"flatten1 parse(project_details = projects ? (name as string,",
				"          duration as string,",
				"          role as string),",
				"     format: 'delimited',",
				"     columnNamesAsHeader: false,",
				"     columnDelimiter: ',',",
				"     nullValue: '') ~> parse1"
			]
		}
	}
}