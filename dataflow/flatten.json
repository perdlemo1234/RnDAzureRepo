{
	"name": "flatten",
	"properties": {
		"folder": {
			"name": "JSON transformations"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "student_json_input",
						"type": "DatasetReference"
					},
					"name": "Students"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "popstateoutput",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "flatten1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          age as integer,",
				"          email as string,",
				"          skills as string[],",
				"          projects as (name as string, duration as string, role as string)[]",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'singleDocument') ~> Students",
				"Students foldDown(unroll(skills, skills),",
				"     mapColumn(",
				"          name = projects.name,",
				"          duration = projects.duration,",
				"          role = projects.role",
				"     ),",
				"     partitionBy('hash', 1),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1",
				"flatten1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Year as string,",
				"          MoviesCount as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}