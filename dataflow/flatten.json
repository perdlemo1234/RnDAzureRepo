{
	"name": "flatten",
	"properties": {
		"folder": {
			"name": "JSON transformations"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Students_JSON",
						"type": "DatasetReference"
					},
					"name": "Students"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "flatten1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          age as integer,",
				"          email as string,",
				"          skills as string[],",
				"          projects as (name as string, duration as string, role as string)[]",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'singleDocument',",
				"     partitionBy('hash', 1)) ~> Students",
				"Students foldDown(unroll(({skills})),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1"
			]
		}
	}
}