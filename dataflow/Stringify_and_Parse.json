{
	"name": "Stringify_and_Parse",
	"properties": {
		"folder": {
			"name": "JSON transformations"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "student_json_input",
						"type": "DatasetReference"
					},
					"name": "Students"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "stringify1",
					"description": "Stringify Projects \n"
				},
				{
					"name": "derivedColumn1",
					"description": "Converting Projects Column into String "
				},
				{
					"name": "flatten1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          age as integer,",
				"          email as string,",
				"          skills as string[],",
				"          projects as (name as string, duration as string, role as string)[]",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'arrayOfDocuments',",
				"     partitionBy('hash', 1)) ~> Students",
				"Students stringify(projects = projects ? string,",
				"     format: 'json') ~> stringify1",
				"flatten1 derive(projects = toString(projects)) ~> derivedColumn1",
				"stringify1 foldDown(unroll(skills),",
				"     mapColumn(",
				"          id,",
				"          name,",
				"          age,",
				"          email,",
				"          skills,",
				"          projects",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1"
			]
		}
	}
}